<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.qnp.pmp.controllers.LoginController"
            prefWidth="400.0" prefHeight="350.0"
            stylesheets="@login.css">

    <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>

        <Text text="ĐĂNG NHẬP" styleClass="heading"/>

        <TextField fx:id="usernameField" promptText="Tên đăng nhập" />
        <PasswordField fx:id="passwordField" promptText="Mật khẩu" />

        <Button fx:id="loginButton" text="Đăng nhập" onAction="#onLoginClick" styleClass="login-button"/>

        <Label fx:id="messageLabel" textFill="red" />
    </VBox>
</AnchorPane>
