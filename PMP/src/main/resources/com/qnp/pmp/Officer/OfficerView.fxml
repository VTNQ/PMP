<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@officer.css" prefHeight="700" prefWidth="1038" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qnp.pmp.controllers.OfficerViewController">

    <!-- Top Title -->
    <top>
        <VBox alignment="CENTER">
            <Label text="📊 Danh sách cán bộ đang hưởng phụ cấp" styleClass="title-label"/>
            <padding><Insets top="20" bottom="10"/></padding>
        </VBox>
    </top>

    <!-- Table Center -->
    <center>
        <VBox spacing="10">
            <padding><Insets top="10" left="10" right="10" bottom="10"/></padding>

            <!-- Search Box -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="🔍 Tìm kiếm:"/>
                <TextField fx:id="searchField" promptText="Nhập họ tên hoặc mã định danh..." onKeyReleased="#onSearch"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="officerTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="fullNameCol" text="Họ tên" />
                    <TableColumn fx:id="phoneCol" text="SĐT" />
                    <TableColumn fx:id="positionCol" text="Chức vụ" />
                    <TableColumn fx:id="unitCol" text="Đơn vị" />
                    <TableColumn fx:id="identifierCol" text="Mã định danh" />
                    <TableColumn fx:id="homeTownCol" text="Quê quán" />
                    <TableColumn fx:id="dobCol" text="Ngày sinh" />
                    <TableColumn fx:id="sinceCol" text="Ngày bắt đầu"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom Bar -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
            <Label fx:id="totalLabel" text="Tổng: 0 cán bộ" styleClass="total-label"/>
            <Button text="📥 Nhập dữ liệu nhiều" onAction="#onImport" styleClass="import-button"/>
            <Button text="🔄 Làm mới" onAction="#refreshTable" styleClass="refresh-button"/>
            <Button text="➕ Thêm mới" onAction="#add" styleClass="add-button"/>
            <Button text="🗑 Xoá" onAction="#onDelete" styleClass="delete-button"/>
        </HBox>
    </bottom>
</BorderPane>
